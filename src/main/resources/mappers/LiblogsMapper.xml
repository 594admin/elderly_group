<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.lanhuhebi.elderly_group.dao.LiblogsDao">

    <select id="getLiblogsById" resultType="cn.lanhuhebi.elderly_group.model.pojo.Liblogs">
        select
                lib_id as libId,
                lib_type as libType,
                lib_creaDate as libCreaDate,
                lib_operator as libOperator,
                lib_ept_id as libEptId,
                lib_num as libNum
        from liblogs
        <trim prefix="where" prefixOverrides="and | or">
            <if test="id != null">
                and id=#{id}
            </if>
        </trim>
    </select>

    <insert id="addLiblogs" parameterType="cn.lanhuhebi.elderly_group.model.pojo.Liblogs">
        insert into liblogs(
                    lib_id,
                    lib_type,
                    lib_creaDate,
                    lib_operator,
                    lib_ept_id,
                    lib_num)
        values(
                    #{libId},
                    #{libType},
                    #{libCreaDate},
                    #{libOperator},
                    #{libEptId},
                    #{libNum})
    </insert>

    <update id="updateLiblogs" parameterType="cn.lanhuhebi.elderly_group.model.pojo.Liblogs">
        update liblogs
        <trim prefix="set" suffixOverrides="," suffix="where id=#{id}">
                        <if test="libId != null and libId!=''">
                            lib_id=#{libId},
                        </if>
                        <if test="libType != null and libType!=''">
                            lib_type=#{libType},
                        </if>
                        <if test="libCreaDate != null and libCreaDate!=''">
                            lib_creaDate=#{libCreaDate},
                        </if>
                        <if test="libOperator != null and libOperator!=''">
                            lib_operator=#{libOperator},
                        </if>
                        <if test="libEptId != null and libEptId!=''">
                            lib_ept_id=#{libEptId},
                        </if>
                        <if test="libNum != null and libNum!=''">
                            lib_num=#{libNum}
                        </if>
        </trim>
    </update>

    <delete id="delLiblogsById" parameterType="String">
        delete from liblogs where id = #{id}
    </delete>

</mapper>