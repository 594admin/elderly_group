<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.lanhuhebi.elderly_group.dao.SysRoleAuthDao">

    <select id="getSysRoleAuthById" resultType="cn.lanhuhebi.elderly_group.model.pojo.SysRoleAuth">
        select
                role_id as roleId,
                auth_id as authId
        from sys_role_auth
        <trim prefix="where" prefixOverrides="and | or">
            <if test="id != null">
                and id=#{id}
            </if>
        </trim>
    </select>

    <insert id="addSysRoleAuth" parameterType="cn.lanhuhebi.elderly_group.model.pojo.SysRoleAuth">
        insert into sys_role_auth(
                    role_id,
                    auth_id)
        values(
                    #{roleId},
                    #{authId})
    </insert>

    <update id="updateSysRoleAuth" parameterType="cn.lanhuhebi.elderly_group.model.pojo.SysRoleAuth">
        update sys_role_auth
        <trim prefix="set" suffixOverrides="," suffix="where id=#{id}">
                        <if test="roleId != null and roleId!=''">
                            role_id=#{roleId},
                        </if>
                        <if test="authId != null and authId!=''">
                            auth_id=#{authId}
                        </if>
        </trim>
    </update>

    <delete id="delSysRoleAuthById" parameterType="String">
        delete from sys_role_auth where id = #{id}
    </delete>

</mapper>