<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.lanhuhebi.elderly_group.dao.RateDao">

    <select id="getRateById" resultType="cn.lanhuhebi.elderly_group.model.pojo.Rate">
        select
                rate_id as rateId,
                rate_val as rateVal
        from rate
        <trim prefix="where" prefixOverrides="and | or">
            <if test="id != null">
                and id=#{id}
            </if>
        </trim>
    </select>

    <insert id="addRate" parameterType="cn.lanhuhebi.elderly_group.model.pojo.Rate">
        insert into rate(
                    rate_id,
                    rate_val)
        values(
                    #{rateId},
                    #{rateVal})
    </insert>

    <update id="updateRate" parameterType="cn.lanhuhebi.elderly_group.model.pojo.Rate">
        update rate
        <trim prefix="set" suffixOverrides="," suffix="where id=#{id}">
                        <if test="rateId != null and rateId!=''">
                            rate_id=#{rateId},
                        </if>
                        <if test="rateVal != null and rateVal!=''">
                            rate_val=#{rateVal}
                        </if>
        </trim>
    </update>

    <delete id="delRateById" parameterType="String">
        delete from rate where id = #{id}
    </delete>

</mapper>